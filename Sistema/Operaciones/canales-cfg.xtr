alias groserias {
  ventana @Groseriasð 200 250 | titulo @Groseriasð Restricciones
  texto cent @Groseriasð 35 Palabras prohibidas en canales
  caja @Groseriasð 10 55 179 150 Configuración
  setv but.@Groseriasð 75 182 20 15 +_groserias.config +/â 105 182 20 15 -_groserias.config -/â 70 215 60 20 OKz_ok/â
  do_but @Groseriasð but.@Groseriasð | groserias.config carga
  window -wa @Groseriasð
}
alias ve.groserias {
  var %xcx = 1,%groserias.texto = $strip($1-) 
  while ($gettok(%groserias.words,%xcx,226)) {
    if ($gettok(%groserias.words,%xcx,226) iswm %groserias.texto) return FUCK!
    inc %xcx 1
  }
}
alias groserias.config {
  if ($1 == +) {
    var %tmp.groseria = $$?="Qué palabra queres añadir? $crlf Sin *" 
    if (%tmp.groseria != $null) { 
      if (%groserias.words == $null) { set %groserias.words %groserias.words * $+ %tmp.groseria $+ * | goto carga }
      set %groserias.words %groserias.words $+ â* $+ %tmp.groseria $+ * 
      goto carga
    }
  }
  elseif ($1 == -) {
    if ($sline(@Groserias,1) != $null) { 
      set %groserias.words $remtok(%groserias.words,$sline(@Groserias,1),1,226) 
      goto carga
    }
  }
  elseif ($1 == carga) {
    :carga
    if ($window(@Groseriasð)) {
      window -hl @Groserias | clear -l @Groserias
      var %xcx = $numtok(%groserias.words,226) 
      while (%xcx > 0) { 
        aline @Groserias $gettok(%groserias.words,%xcx,226) 
        dec %xcx
      }
      lista @Groseriasð 20 75 160 100
      setv tmp.@Groseriasð @Groseriasð 20 75 160 7 1 0 @Groserias not
      did-lista not @Groseriasð tmp.@Groseriasð
    }
  }
}
menu @Groseriasð {
  mouse { if ($mouse.key == 1) refresco-lista not @Groseriasð tmp.@Groseriasð }
  sclick { refresco-lista not @Groseriasð tmp.@Groseriasð }
}
