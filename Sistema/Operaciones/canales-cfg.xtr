  else { var %canal-prt global } 
  if ($readini($c-file(%canal-prt),massdeop,activado) == si) {
    if (% [ $+ [ %canal-prt ] ] [ $+ [ .sensibilidad ] ] == baja) { var %tiempo = 2 }
