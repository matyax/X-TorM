  winrgn wrSetMode rmRoundRect
  winrgn wrSetRegion 2 30 558 424 90 90
  drawrect -rf @Setupğ $%(rgb.fondo) 1 0 0 558 425
  drawpic -nt @Setupğ 65280 0 29 $mircdirskins\ $+ $%(setupdir) $+ \Setup.png
  %icon.@Setupğ = abajo 35 70 $icono(general.bmp) General_setup.gui 1/â $icono(Proteccion.bmp) Proteccion_setup.gui 2/â $icono(Apariencia.bmp) Apariencia_setup.gui 3/â $icono(Cerrar.bmp) Cerrar _ .timer -m 1 800 window -c @Setupğ /â
