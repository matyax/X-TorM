alias configuracion {
  var %tmp.x = $round($calc( ( $window(-3).w - 560 ) / 2 ),0),%tmp.y = $round($calc( ( $window(-3).h - 425) / 2 ),0)
  window -Bph +b @Setupğ %tmp.x %tmp.y 558 425
