    elseif ($mouse.x isnum 170-210 && $mouse.y isnum 270-280) { colores select.escritura col2 }
    elseif ($mouse.x isnum 25-71 && $mouse.y isnum 285-296) { $iif(%negrita == ,unset %negrita,set %negrita ) | rc.escritura 2 | drawline @Escriturað }
    elseif ($mouse.x isnum 25-89 && $mouse.y isnum 305-316) { $iif(%subrayado == ,unset %subrayado,set %subrayado ) | rc.escritura 2 | drawline @Escriturað }
    else { refresco-lista tok add tmp.@Escriturað }
  }
}

alias select.escritura {
  if ($1 == col1) { %esc.color = $2 | cuadro @Escriturað %esc.color 170 250 40 10 | drawline @Escriturað }
  elseif ($1 == col2) { %esc.fondo = $2 | cuadro @Escriturað %esc.fondo 170 270 40 10 | drawline @Escriturað }
  else { %escritura = $1- }
}
alias corrector {
  if ($1 == +) {
    var %x = $$?="¿Palabra a reemplazar?" | var %y = $$?="¿Reemplazada por?"
    hadd corrector $gettok(%x,1,32) %y | hsave -o corrector sistema\cfg\corrector.lst | cargar.palabras | did-lista tok add tmp.@Escriturað
  }
  if ($1 == -) {
    hdel corrector $gettok($sline(@Corrector,1),1,9) | hsave -o corrector sistema\cfg\corrector.lst | cargar.palabras | did-lista tok add tmp.@Escriturað
  }
}
