;telnet server
alias t-server {
  set %s-telnet.pt $$?="Puerto?"
  if ($window(@s-Telnet) == $null)  { window -aek @s-Telnet 120 120 420 200 | background -t @s-Telnet img\relleno.bmp | font @s-Telnet 12 Terminal }
  sockclose stelnet | sockclose atelnet
  socklisten stelnet %s-telnet.pt
  echo @s-Telnet 4ù0í4ù 0Servidor de TelNet activo en el puerto %s-telnet.pt ( $rv_pt(%s-telnet.pt) )
  echo @s-Telnet 4ù0í4ù 0IP local: $ip ( $host )
  titlebar @s-Telnet :  $+ 0 %s-telnet.pt ( $rv_pt(%s-telnet.pt) )
}
on 1:socklisten:stelnet: {
  sockaccept atelnet
  sockclose stelnet
  if ($window(@s-Telnet) == $null)  { window -aek @s-Telnet 120 120 420 200 | background -t @s-Telnet img\relleno.bmp | font @s-Telnet 12 Terminal }
  echo @s-Telnet 4ù0í4ù $+ 0 $sock(atelnet).ip conectando...
}
on 1:sockread:atelnet: {
  sockread 1000 &tmp 
  var %t-net = $bvar(&tmp,1-1000).text
  if ($window(@s-Telnet) == $null)  { window -aek @s-Telnet 120 120 420 200 | background -t @s-Telnet img\relleno.bmp | font @s-Telnet 12 Terminal }
  echo @s-Telnet 15>0 %t-net
}
on 1:input:@s-Telnet: {
  if ($sock(atelnet).status != active) { 
    echo @s-Telnet 4ù0í4ù 0La conexion esta cerrada... | error | halt 
  }
  sockwrite -tn atelnet $1- | echo @s-telnet 15>0 $1- | halt
}
on 1:sockclose:atelnet: {
  if ($window(@s-Telnet) == $null) { window -aek @s-Telnet 120 120 420 200 | background -t @s-Telnet img\relleno.bmp | font @s-Telnet 12 Terminal }
  echo @s-Telnet 4ù0í4ù 0Conexión cerrada por $sock($sockname).ip 
  t-server %s-telnet.pt
}
on 1:close:@s-Telnet: { sockclose stelnet | sockclose atelnet | unset %s-telnet.* | info Servidor Telnet - Conexión cerrada }

